<%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="flash text-danger text-center <%= key %>"><%= value %></div>
    <% end %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control py-4' },
                label_html: { class: 'small mb-1' },
                placeholder: 'Enter email address',
                wrapper_html: { class: 'form-group'}
    %>
    <%= f.input :password,
                required: true,
                input_html: { autocomplete: "current-password", class: 'form-control py-4' },
                label_html: { class: 'small mb-1' },
                placeholder: 'Enter password',
                wrapper_html: { class: 'form-group'} %>
    <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-group' } %>
        <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
  


<% end %>
