<div class="sb-page-header pb-10 sb-page-header-light bg-white shadow">
      <div class="container-fluid">
          <div class="sb-page-header-content py-5">
              <h1 class="sb-page-header-title" style='display: inline;'>
                    <% if local_variables.include?(:feather_icon)%><div class="sb-page-header-icon"><i data-feather=<%= feather_icon %>></i></div><% end %>
                    <%= title %>
              </h1>
              <% if local_variables.include?(:subtitle) %>
                <div class="sb-page-header-subtitle"><%= subtitle %></div>
              <% end %>
                    <%= yield %>
          </div>
      </div>
  </div>